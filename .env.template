# Global Configuration
# ============================================
# Mozilla SOPS Age Key (Generate using age-keygen)
SOPS_AGE_KEY=your_secret_key_here
SOPS_AGE_PUBKEY=your_public_key_here

# Tailscale Authentication Key (Recommended: Ephemeral, Reusable, Tagged)
TAILSCALE_AUTH_KEY=your_tailscale_auth_key_here

# Firewall Trusted IP (Admin Access)
FIREWALL_TRUSTED_IP=your_admin_ip_here

# Install also on K8s Master (Default: true)
# If false, master node will be tainted (CriticalAddonsOnly=true:NoSchedule)
INSTALL_ALSO_ON_K8S_MASTER=true

# ============================================
# SERVER 1 Configuration
# ============================================
SERVER_PUBLIC_IP_ADDRESS_1=your_server_1_ip
SERVER_USERNAME_1=root
SERVER_PASSWORD_1=your_server_1_password
SERVER_HOSTNAME_1=your_server_1_hostname
# Role format: [mode],[cluster_name],[node_function]
# Modes: single-node, cluster
# Functions: master-node, worker-node (only if mode is cluster)
SERVER_ROLE_1=cluster,your_cluster_name,master-node

# ============================================
# SERVER 2 Configuration
# ============================================
SERVER_PUBLIC_IP_ADDRESS_2=your_server_2_ip
SERVER_USERNAME_2=ubuntu
SERVER_PASSWORD_2=your_server_2_password
SERVER_HOSTNAME_2=your_server_2_hostname
SERVER_ROLE_2=cluster,your_cluster_name,worker-node

# ... Add more servers following the same pattern (SERVER_X_...)

# ============================================
# K8s Domain (Optional for HA)
# ============================================
# K8S_DOMAIN_CLUSTER_NAME_1=your_cluster_name.your_domain.com
# K8S_DOMAIN_CLUSTER_IP_ADDRESS_1=your_load_balancer_or_master_ip